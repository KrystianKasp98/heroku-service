extends layout

block content
  h1= title
  if show
    form(method='post')
      p What is your favourite season?
      ul
        each item in data
          li 
            label=item.title 
            input(type='radio' name='quiz' value=item._id)
      input(type='submit' value='Zag≈Çosuj')
      p To see results please vote
  else 
    h1 You have already voted!
    p Results
    ul
    each item in data
      li #{item.title}, votes: #{item.vote} (#{(item.vote/sum * 100).toFixed(2)}%)
    p All votes: #{sum}