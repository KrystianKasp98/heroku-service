//- its layout for html files
doctype html
mixin item(url,title)
  li(class="list-item") 
    a(href=url class=`item ${path == url ? 'active' : ''}`)=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul  
        +item('/', 'Strona glowna')
        +item('/news', 'Aktualnosci')
        +item('/quiz', 'Quiz')
        +item('/admin', 'Admin')
    block content
