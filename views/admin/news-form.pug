extends ../layout

block content
  h1= title

  if errors !== undefined 
    each message in errors.errors
      p=message

  form(method='post')
    p
      label Title
      input(type="text" name='title' value=body.title || '')
    
    p
      label Description
      textarea(name="description", cols="30", rows="10" value=body.description || '')  
    p
      input(type="submit" value="Save")